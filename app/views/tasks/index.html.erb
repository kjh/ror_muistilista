<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Position</th>
    <th>User</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.status %></td>
    <td><%=h task.position %></td>
    <td><%=h task.user_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>